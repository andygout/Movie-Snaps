<body onload="initialize()">
  <div class="mapBox">
    <div id="mapDestination"></div><br>
    <input id="enterDestination" type="text" size="40" onkeydown="if (event.keyCode == 13) document.getElementById('submitDestination').click()"></textbox>
    <button id="submitDestination" onclick="codeAddress()">Go</button>
      <button id="add-marker" onclick="placeMarker(map.getCenter())">Add Marker</button>
      <button id="confirm-marker" onclick="confirmLocation(allMarkers[0])">Add location</button>
  </div>
  <div id='notify'>
  </div>
  <% if @locations.any? %>
    <% @locations.each do |location| %>
      <%= link_to location.name, location_path(location) %>
      <br>
    <% end %>
  <% else %>
    <h1>No locations yet</h1>
  <% end %>
</body>
