Welcome to Movie Snaps
<br>
Click <%= link_to "here", '/locations' %> to upload your photos!
<br>
<% if @photos %>
  All uploads: <br>
  <% @photos.each do |p| %>
    <img src='<%= p.image_file_name %>' height='200' width='200' %>
    <br>
    <%= p.caption %> <i>Uploaded on </i> <%= p.created_at %>
    <br>
    From the movie <%= p.visit.scene.movie.name %>
    <br>
    <% if current_user %>
      <% liked = false %>
      <% p.likes.each do |l| %>
        <% if current_user.id == l.user_id %>
          <% liked = true %>
          <% break %>
        <% end %>
      <% end %>
      <% if liked == false %>
        <%= link_to "♡", photo_likes_path(p), class: 'likes-link' %>
      <% else %>
        ❤
      <% end %>
    <span class='likes_count'> <%= p.likes.count %> </span> <%= 'like'.pluralize p.likes.count %>
    <br>
    <% end %>
  <% end %>
<% else %>
  No photos have been uploaded!
<% end %>