
#locationPage {
  margin: 2em 3em;
  #loclist {
    margin-left: 1em;
    ul {
      padding-left: 10px;
      li {
        list-style: none;
        padding: 12px 0;

        a:hover {
          background: url(<%= asset_path('listitemarrow.png') %>) 0px -56px no-repeat;
          color: #fafafa;

        }
        a  {
          width: 85%;
          display: inline-block;
          line-height: 24px;
          text-decoration: none;
          color: #333;
          font-weight: bold;
          background: url(<%= asset_path('listitemarrow.png') %>v) 0px 4px no-repeat;
          padding-left: 30px;
          transition: all .05s ease;
        }
      }//li
    }//ul
  }//loclist
  #sideright {
    overflow: auto;
    h2 {
      border-bottom: 1px dotted #777c82;
      padding-bottom: 20px;
      margin-top: 3em;
      margin-left: .5em;
      width: 96%;
    }//h2
    h3 {
      padding-bottom: 10px;
      margin-top: 3em;
      margin-left: .5em;
      width: 96%;
    }//h3
    #scenes {
      overflow: auto;
      ul {
        article {
          div.box {
            margin-top: 20px;
            float: left;
            margin: 0;
            text-decoration: none;
            color: #506b80;
            h3 {
              padding-bottom: 5px;
              margin-top: 1em;
              margin-left: .5em;
              width: 96%;
            }

          }//divbox

        }//article

      }//ul
      h3 {
        padding-bottom: 5px;
        margin-top: 2em;
        margin-left: .5em;
        width: 96%;
      }
      ul {
        list-style: none;
        overflow: auto;
        li  {
          margin: 0;
          li.photo {
            img {
              width: 80%;
            }
          }//photo

        }//li
        ul li.visit {
            padding: 0;
            margin: 0;
            ul li.photo {
              list-style: none;
              .visitorimage {
                width: 80%;
                img {
                  width: 100%;
                }//img
              }//visitorimage
            }//photo
        }//visit
      }//ul
    }//scenes
  }//sideright
}//locationPage

h1 {
  padding-bottom: 1em;
  margin-left: .5em;
  width: 96%;
  border-bottom: 1px dotted #777c82;
  font-size: 26px;
  font-weight: normal;
  color: #1b1b1b;
  .colorb {
    color:#506b80;
  }

}

#destination {
  width: 60%;
  margin: 3em auto 2em;
  padding: 3em;
  /* box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.15); */
  border-radius: 20px;
  background-color: white;
  #enterDestination {
    height: 30px;
    padding: 5px;
    /* box-shadow: 1px 0px 1px rgba(0, 0, 0, 0.1); */
    /* border: 1px solid #edeef0; */
    border-bottom-color: #C2C6CB;
    border-right-color: #AEB2B7;
    margin-right: 15px;
    font-size: 14px;
    color: #506b91;
    background-color: #f9f9f9;

  }//destination
  #enterMovie {
    height: 30px;
    padding: 5px;
    /* box-shadow: 1px 0px 1px rgba(0, 0, 0, 0.1); */
    /* border: 1px solid #edeef0; */
    border-bottom-color: #C2C6CB;
    border-right-color: #AEB2B7;
    margin-right: 15px;
    font-size: 14px;
    color: #506b91;
    background-color: #f9f9f9;
  }//#enterMovie
  #confirm-marker {
    width: 100px;
    color: white;
    vertical-align: middle;
    height: 36px;
    font-size: 13px;
    text-align: center;
    padding: 0.5em;
    cursor: pointer;
    background-color: #1C609C;
    /* font-weight: bold; */
    /* padding: 10px 20px; */
    text-align: center;
    border-radius: 3px;

  }//confirm-marker
  button#submitDestination:hover {
    background-color: #4377A5;
    text-decoration: none;
    color: black;
  }


  button#submitDestination {
    width: 80px;
    color: white;
    vertical-align: middle;
    height: 36px;
    font-size: 13px;
    text-align: center;
    padding: 0.5em;
    cursor: pointer;
    border: 1px solid #777c82;
    background-color: #1C609C;
    /* font-weight: bold; */
    /* padding: 10px 20px; */
    text-align: center;
    border-radius: 3px;
  }
  button#add-marker:hover {
    border: 1px solid #777c82;
    background-color: #4377A5;
    text-decoration: none;
    color: black;
  }//button add-marker

  button#add-marker {
    width: 120px;
    color: white;
    vertical-align: middle;
    height: 36px;
    font-size: 13px;
    text-align: center;
    padding: 0.5em;
    cursor: pointer;
    border: 1px solid #777c82;
    background-color: #1C609C;
    /* font-weight: bold; */
    /* padding: 10px 20px; */
    text-align: center;
    border-radius: 3px;
  }
}

.mapBox {
  width: 80%;
  margin: 0 auto;
}

#mapDestination {

    height: 500px;
    border-radius: 20px;

}

#locationProfile {
  float: center;
  text-align: center;
  margin: 0;
  background-color: #E0F2F7;
  border-radius: 20px;
  padding-bottom: 50px;
  margin-bottom: 0px;
  padding-top: 10px;
  margin-top: 10px;
  font-family: 'Julius Sans One', sans-serif;

  .title {
    text-align: left;
  }

  .scene {
    background-color: white;
    border-radius: 20px;
    margin-top: 50px;
    overflow: auto;
    margin-right: 20px;
    padding-top: 10px;
  }

  .moviePosterBox {
    float: left;
    margin-left: 10px;

    :first-child {
      width: 200px;
      border-radius: 20px; 
    }
  }
  .visit {
    width: 100px;

    :first-child {
      border-radius: 100%;
    }
    
    .comments {
      width: 90%;
      height: 250px;
      margin: 0;
      float: left;
      margin-top: 10px;
      margin-right: 20px;
      text-align: left;
      overflow: hidden;
      overflow-y: scroll;
      border-radius: 10px;
    }
  }

  .photo {
    :first-child {
      height:100px;
      border-radius: 20px;
    }
  }

}
