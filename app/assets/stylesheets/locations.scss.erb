#destination {
  width: 60%;
  margin: 3em auto 2em;
  padding: 3em;
  border: 1px solid #838383;
  /* box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.15); */
  border-radius: 3px;
  background-color: #F2F2F2;
  background: -webkit-gradient(linear, left top, left bottom, from(#FFFFFF), to(#D9DBDD));
  #enterDestination {
    height: 30px;
    padding: 5px;
    /* box-shadow: 1px 0px 1px rgba(0, 0, 0, 0.1); */
    /* border: 1px solid #edeef0; */
    border-bottom-color: #C2C6CB;
    border-right-color: #AEB2B7;
    margin-right: 15px;
    font-size: 14px;
    color: #506b91;
    background-color: #f9f9f9;

  }//destination
  #enterMovie {
    height: 30px;
    padding: 5px;
    /* box-shadow: 1px 0px 1px rgba(0, 0, 0, 0.1); */
