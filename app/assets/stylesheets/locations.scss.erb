  }
  button#add-marker:hover {
    border: 1px solid #777c82;
    background: -webkit-gradient(linear, left top, left bottom, from(#FDFDFD), to(#AEBDC9));

    color: #333333;
    text-decoration: none;
  }//button add-marker

  button#add-marker {
    width: 120px;
    color: #333;
    vertical-align: middle;
    height: 36px;
    font-size: 13px;
    text-align: center;
    padding: 0.5em;
    cursor: pointer;
    border: 1px solid #777c82;
    background: -webkit-gradient(linear, left top, left bottom, from(#fff), to(#ddd));
    /* font-weight: bold; */
