    margin-right: 15px;
    font-size: 14px;
    color: #506b91;
    background-color: #f9f9f9;
  }//#enterMovie
  #confirm-marker {
    width: 100px;
    color: #333;
    vertical-align: middle;
    height: 36px;
    font-size: 13px;
    text-align: center;
    padding: 0.5em;
    cursor: pointer;
    border: 1px solid #777c82;
    background: -webkit-gradient(linear, left top, left bottom, from(#fff), to(#ddd));
    /* font-weight: bold; */
    /* padding: 10px 20px; */
    text-align: center;
    border-radius: 3px;

  }//confirm-marker
  button#submitDestination:hover {
    border: 1px solid #777c82;
    background: -webkit-gradient(linear, left top, left bottom, from(#FDFDFD), to(#AEBDC9));

    color: #333333;
    text-decoration: none;
  }


  button#submitDestination {
    width: 80px;
    color: #333;
    vertical-align: middle;
    height: 36px;
    font-size: 13px;
    text-align: center;
    padding: 0.5em;
    cursor: pointer;
    border: 1px solid #777c82;
